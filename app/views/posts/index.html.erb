
<h1>All Posts: </h1>
 
<table>
  <tr>
    <th>Title</th>
    <th>Text</th>
    <th></th>
  </tr>
    <tr>
        <% @posts.each do |post| %>
            <div id="<%= dom_id(post) %>">
            
                <div>
                    <tr>
                        <td><%= post.title %></td>
                        <td><%= post.text %></td>
                        <td><%= link_to 'Show', post_path(post) %></td>

                    </tr>
                </div>
        
            </div>
        <% end %>
    </tr>
